    @Styles.Render("~/assets/css/et-line-font.css")
    @Styles.Render("~/assets/css/magnific-popup.css")
    @Styles.Render("~/assets/css/flexslider.css")
    @Styles.Render("~/assets/css/owl.carousel.css")
